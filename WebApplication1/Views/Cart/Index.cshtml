@model List<DataAccess.Entites.Car>;

<div class="card text-center">
    
    <div class="card-header">
        Your Cart
    </div>
    
    <div class="card-body">
        <h5 class="card-title">Car List</h5>
        <div>
            @if(!Model.Any())
            {
                <p>No cars in the cart!</p>
            }
            <ol class="list-group list-group-numbered">
                @foreach(var c in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@c.Name</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">@c.Price$</span>
                    </li>
                }
            </ol>
        </div>
        <a asp-controller="Home" asp-action="Index" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary mt-3">Confirm</a>
    </div>
    
    <div class="card-footer text-muted">
        Count: @Model.Count();
    </div>

</div>